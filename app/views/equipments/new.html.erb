<div class="form-container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-offset-3">

      <h2>Add quad rollers for rent</h2>

      <%= simple_form_for @equipment, url: equipments_path do |f| %>
        <div class="form-inputs">
          <%= f.input :title,
                      autofocus: true %>
          <%= f.input :description,
                      autofocus: true %>
          <%= f.input :size,
                      collection: Equipment::SIZES,
                      input_html: { class: 'select2' } %>
          <%= f.input :shape,
                      collection: Equipment::SHAPES,
                      input_html: { class: 'select2' } %>
          <%= f.input :location,
                      autofocus: true %>
          <%= f.input :daily_price,
                      autofocus: true %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Let's roll!" %>
        </div>
      <% end %>
      <br>

    </div>
  </div>
</div>
